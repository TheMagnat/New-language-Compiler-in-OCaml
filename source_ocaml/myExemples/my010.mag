int def int_list_len ([int] l){
    int ret = 0;
    if(pair_empty(l))
        ret = 0;
    else{
        ret = 1 + int_list_len(tail(l));
    }
    return ret;
}

int def int_list_sum([int] l){
    int ret = 0;
    if(pair_empty(l)){
        ret = 0;
    }
    else{
        ret = head(l) + int_list_sum(tail(l));
    }
    return ret;  
}

